{% if items %}
  <nav class="pager clearfix" role="navigation" aria-labelledby="pagination-heading">
    <h4 id="pagination-heading" class="visually-hidden">{{ 'Pagination'|t }}</h4>
    <ul class="pager__items js-pager__items list-style-none flex flex-wrap justify-between p-0 m-0">
      <div class="pager__left flex mb-1">
        {# Print first item if we are not on the first page. #}
        {% if items.first %}
          <li class="pager__item pager__item--first">
            <a class="pager__link left btn button-narrow bg-tertiary rounded mr-2" href="{{ items.first.href }}" title="{{ 'Go to first page'|t }}"{{ items.first.attributes|without('href', 'title') }}>
              <i class="icon-backward i-topped-1"><span class="visually-hidden">{{ 'First page'|t }}</span></i>
            </a>
          </li>
        {% endif %}
        {# Print previous item if we are not on the first page. #}
        {% if items.previous %}
          <li class="pager__item pager__item--previous">
            <a class="pager__link left flex btn button-narrow bg-tertiary rounded mr-2" href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel') }}>
              <i class="icon-chevron-left i-topped-2"></i><span class="ml-2 regular md-show">{{ 'Previous'|t }}</span>
            </a>
          </li>
        {% endif %}
        {# Add an ellipsis if there are further previous pages. #}
        {% if ellipses.previous %}
          <li class="pager__item pager__item--ellipsis" role="presentation"></li>
        {% endif %}
      </div>
      {# Now generate the actual pager piece. #}
      <div class="pager__central flex flex-grow mb-1">
        {% for key, item in items.pages %}
          <li class="pager__item{{ current == key ? ' is-active' : '' }}">
            {% if current == key %}
              {% set title = 'Current page'|t %}
            {% else %}
              {% set title = 'Go to page @key'|t({'@key': key}) %}
            {% endif %}
            <a class="pager__link left btn button-narrow mr-2 rounded {{ current == key ? ' bg-primary white' : 'bg-tertiary black' }}" href="{{ item.href }}" title="{{ title }}"{{ item.attributes|without('href', 'title') }}>
              <span class="visually-hidden">
                {{ current == key ? 'Current page'|t : 'Page'|t }}
              </span>
              {{- key -}}
            </a>
          </li>
        {% endfor %}
      </div>
      <div class="pager__right flex mb-1">
        {# Add an ellipsis if there are further next pages. #}
        {% if ellipses.next %}
          <li class="pager__item pager__item--ellipsis" role="presentation"></li>
        {% endif %}
        {# Print next item if we are not on the last page. #}
        {% if items.next %}
          <li class="pager__item pager__item--next">
            <a class="pager__link left flex btn button-narrow bg-tertiary rounded" href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel') }}>
              <span class="mr-2 regular md-show">{{ 'Next'|t }}</span><i class="icon-chevron-right i-topped-2"></i>
            </a>
          </li>
        {% endif %}
        {# Print last item if we are not on the last page. #}
        {% if items.last %}
          <li class="pager__item pager__item--last">
            <a class="pager__link left btn button-narrow bg-tertiary ml-2 rounded" href="{{ items.last.href }}" title="{{ 'Go to last page'|t }}"{{ items.last.attributes|without('href', 'title') }}>
              <i class="icon-forward i-topped-1"><span class="visually-hidden">{{ 'Last page'|t }}</span></i>
            </a>
          </li>
        {% endif %}
      </div>
    </ul>
  </nav>
{% endif %}
