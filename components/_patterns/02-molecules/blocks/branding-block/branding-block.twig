{% block content %}
  {% if site_logo %}
    <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home" class="branding__site-logo block relative">
      <object type="image/svg+xml" data="{{ site_logo }}" class="logo">
        <img src="{{ site_logo }}" alt="{{ 'Home'|t }}" class="branding__site-logo-image"/>
      </object>
    </a>
  {% endif %}
  <div class="branding__meta flex flex-column justify-center">
  {% if site_name %}
    <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home" class="branding__site-name mx-2">{{ site_name }}</a>
  {% endif %}

  {% if site_slogan %}
    <h6 class="branding__site-slogan mx-2 my-1">{{ site_slogan }}</h6>
  {% endif %}
  </div>
{% endblock %}
